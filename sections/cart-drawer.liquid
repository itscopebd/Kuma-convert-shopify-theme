{% form 'cart', cart %}


<div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">
  <div class="offcanvas-header">
    <h5 id="offcanvasRightLabel">Cart &bull;{{ cart.item_count }}</h5>
    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body">
 
<table>
   <tbody>
    {% for item in cart.items %}
        <tr class="my-3 py-3">
            <td>
            <img src="{{ item.image |  image_url }}" alt="{{ item.title }}" style="width: 80px; height:auto">
        </td>
        <td>
           <div class="product__info">
            <p>{{ item.product.title |  escape }}</p>
           <div class="right__info">
             <span>{{ item.price |  money }}</span>
           <a href="" onclick="itemRemove(event,this)" data-line="{{ forloop.index }}">Remove</a>
           </div>
           </div>
            {% unless item.product.has_only_default_variant %}
                {% for option in item.options_with_values %}
                    <small>{{ option.value }}</small>
                    {% unless forloop.last %}
                        /
                    {% endunless %}
                {% endfor %}   

            {% endunless %}


                 <div class="quantity">
                   <span class="increase qty__selector" onclick="increases(this)">+</span>
                    <input type="number" name="quantity" id="" value="{{ item.quantity }}" data-line="{{ forloop.index }}">
                    <span class="qty__selector decrease" onclick="decreases(this)">-</span>
                </div>
        </td>

        </tr>
    {% endfor %}
   </tbody>
</table>




  </div>
  <div class="d-flex justify-content-between px-3 cart__bottom">
    <h3>Total Price:</h3>
    <h5>{{ cart.total_price |  money }}</h5>
</div>
<button type="submit"  name="checkout" class="btn btn-primary">Check Out</button>
</div>
    
{% endform %}