                <tr>
                    <td> <img class="cart_image" src="{{ item.image |  image_url  }}" alt=""> </td>
                 </tr>
            {% endfor %}
                </tbody>
              </table>
        </div>
        <div class="col-md-4">

        </div>
    </div>
</div>

